from turtle import * #permet d'utiliser le mode Tortue avec Python

# Initialisation de la tortue
reset() #réinitialise le graphique et les réglages de la Tortue
up() #lève le crayon de la Tortue

goto(-100,0)
for i in range (6):
  down() #abaisse le crayon de la Tortue
  forward(50) #fait avancer la Tortue
  left(90) #fait tourner la Tortue (angle en degrés)
  forward(50)
  left(90)
  forward(50)
  right(90)
  left(180)
  forward(50)
  left(90)
  up()
  forward(90)
